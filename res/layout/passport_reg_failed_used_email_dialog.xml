<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Passport.DialogLayoutPadding"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/passport_login_instead_reg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/passport_login_instead_reg_with_email" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/passport_buttons_margin_v">
        <Button android:id="@id/passport_get_back_pwd" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/passport_get_back_pwd" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/passport_buttons_margin_v">
        <Button android:id="@id/cancel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@android:string/cancel" />
    </LinearLayout>
</LinearLayout>